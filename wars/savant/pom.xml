<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.commonjava.aprox.wars</groupId>
    <artifactId>aprox-wars</artifactId>
    <version>0.14.1-SNAPSHOT</version>
  </parent>
  
  <artifactId>aprox-savant</artifactId>
  <!-- <packaging>war</packaging> -->
  
  <name>AProx :: WARs :: Savant</name>
  <description>REST + JS UI + Cartographer + DotMaven + Autoprox</description>
  
  <dependencies>
    <dependency>
      <groupId>org.commonjava.aprox</groupId>
      <artifactId>aprox-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.commonjava.aprox</groupId>
      <artifactId>aprox-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.commonjava.aprox</groupId>
      <artifactId>aprox-db-flat</artifactId>
    </dependency>
    <dependency>
      <groupId>org.commonjava.aprox</groupId>
      <artifactId>aprox-filer-default</artifactId>
    </dependency>
    <dependency>
      <groupId>org.commonjava.aprox</groupId>
      <artifactId>aprox-autoprox-common</artifactId>
    </dependency>
    <dependency>
      <groupId>org.commonjava.aprox</groupId>
      <artifactId>aprox-autoprox-jaxrs</artifactId>
    </dependency>
    <dependency>
      <groupId>org.commonjava.aprox</groupId>
      <artifactId>aprox-depgraph-jaxrs</artifactId>
    </dependency>
    <dependency>
      <groupId>org.commonjava.aprox</groupId>
      <artifactId>aprox-dot-maven-jaxrs</artifactId>
    </dependency>
    <dependency>
      <groupId>org.commonjava.aprox</groupId>
      <artifactId>aprox-indexer</artifactId>
    </dependency>
    <dependency>
      <groupId>org.commonjava.aprox.ui</groupId>
      <artifactId>aprox-ui-layover</artifactId>
      <!-- <type>war</type> -->
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
  </dependencies>
  
  <build>
    <finalName>aprox</finalName>
    
    <plugins>
      <plugin>
        <groupId>org.commonjava.maven</groupId>
        <artifactId>restdoc-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptorRefs>
            <descriptorRef>war</descriptorRef>
          </descriptorRefs>
          <!-- <archive>
            <manifestEntries>
              <Dependencies>org.jboss.threads export</Dependencies>
            </manifestEntries>
          </archive> -->
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
