<assembly>
  <id>launcher</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>${distName}</baseDirectory>
  
  <dependencySets>
    <!-- this main project artifact -->
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <includes>
        <include>${project.groupId}:${project.artifactId}:jar:${project.version}</include>
      </includes>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- base launcher configs/scripts -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>runtime</scope>
      <includes>
        <include>org.commonjava.aprox.launch:aprox-launcher-base:tar.gz:${project.version}</include>
      </includes>
      <outputDirectory>/</outputDirectory>
      <directoryMode>770</directoryMode>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- user interface -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>runtime</scope>
      <includes>
        <include>org.commonjava.aprox.ui*</include>
      </includes>
      <outputDirectory>ui</outputDirectory>
      <directoryMode>775</directoryMode>
      <fileMode>664</fileMode>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    
    <!-- document sets -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>provided</scope>
      <includes>
        <include>*:tar.gz:docset:*</include>
      </includes>
      <outputDirectory>docs</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- configuration sets -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>provided</scope>
      <includes>
        <include>*:tar.gz:confset:*</include>
      </includes>
      <outputDirectory>etc/aprox</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    
    <!-- aggregated commonjava classes -->
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <useProjectAttachments>true</useProjectAttachments>
      <includes>
        <include>${project.groupId}:${project.artifactId}:jar:launcher-classes:${project.version}</include>
      </includes>
      <outputDirectory>lib</outputDirectory>
      <outputFileNameMapping>aprox-cdi-components-${project.version}.jar</outputFileNameMapping>
    </dependencySet>
    
    <!-- other runtime dependencies -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>runtime</scope>
      <excludes>
        <exclude>org.commonjava.*</exclude>
      </excludes>
      <outputDirectory>lib/thirdparty</outputDirectory>
    </dependencySet>
  </dependencySets>
  
</assembly>
