<assembly>
  <id>war</id>
  <formats>
    <format>war</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  
  <dependencySets>
    <dependencySet>
      <scope>runtime</scope>
      <includes>
        <include>org.commonjava*</include>
      </includes>
      <excludes>
        <exclude>org.commonjava*:*:war:*</exclude>
      </excludes>
      
      <outputDirectory>WEB-INF/classes</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>WEB-INF/classes/log4j.properties</exclude>
          <exclude>log4j.properties</exclude>
          <exclude>META-INF/beans.xml</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    
    <dependencySet>
      <scope>runtime</scope>
      <excludes>
        <exclude>org.commonjava*</exclude>
      </excludes>
      <outputDirectory>WEB-INF/lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
    
    <dependencySet>
      <scope>runtime</scope>
      <includes>
        <include>org.commonjava*:*:war:*</include>
      </includes>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>WEB-INF/web.xml</exclude>
          <exclude>WEB-INF/beans.xml</exclude>
          <exclude>WEB-INF/classes/beans.xml</exclude>
          <exclude>WEB-INF/classes/log4j.properties</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
  
  <fileSets>
    <fileSet>
      <directory>src/main/webapp</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>